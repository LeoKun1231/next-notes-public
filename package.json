{
  "name": "next-notes",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev -p 8000",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "format": "prettier --write '**/*.{js,jsx,ts,tsx}' && next lint --fix",
    "prepare": "husky install",
    "commit": "git add . && pnpm cz"
  },
  "dependencies": {
    "@prisma/client": "^5.11.0",
    "@radix-ui/react-accordion": "^1.1.2",
    "@radix-ui/react-alert-dialog": "^1.0.5",
    "@radix-ui/react-dropdown-menu": "^2.0.6",
    "@radix-ui/react-icons": "^1.3.0",
    "@radix-ui/react-scroll-area": "^1.0.5",
    "@radix-ui/react-slot": "^1.0.2",
    "ahooks": "^3.7.10",
    "class-variance-authority": "^0.7.0",
    "clsx": "^2.1.0",
    "customParseFormat": "link:dayjs/plugin/customParseFormat",
    "dayjs": "^1.11.10",
    "lucide-react": "^0.358.0",
    "marked": "^12.0.1",
    "next": "14.1.3",
    "next-themes": "^0.3.0",
    "react": "^18",
    "react-dom": "^18",
    "react-resizable-panels": "^2.0.13",
    "sanitize-html": "^2.13.0",
    "tailwind-merge": "^2.2.1",
    "tailwindcss-animate": "^1.0.7",
    "timezone": "link:dayjs/plugin/timezone",
    "zod": "^3.22.4",
    "zustand": "^4.5.2"
  },
  "devDependencies": {
    "@tailwindcss/typography": "^0.5.10",
    "@types/node": "^20",
    "@types/react": "^18",
    "@types/react-dom": "^18",
    "@types/sanitize-html": "^2.11.0",
    "@typescript-eslint/eslint-plugin": "6.21.0",
    "autoprefixer": "^10.0.1",
    "commitizen": "^4.3.0",
    "cz-conventional-changelog": "^3.3.0",
    "eslint": "^8",
    "eslint-config-next": "14.1.3",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.1.3",
    "eslint-plugin-react-refresh": "^0.4.5",
    "eslint-plugin-tailwindcss": "^3.14.3",
    "husky": "^9.0.11",
    "lint-staged": "^15.2.2",
    "pnpm": "^8.15.4",
    "postcss": "^8",
    "prettier": "^3.2.5",
    "prettier-plugin-tailwindcss": "^0.5.12",
    "prisma": "^5.11.0",
    "tailwindcss": "^3.3.0",
    "typescript": "~5.2.2"
  },
  "lint-staged": {
    "*.{js,vue,ts,jsx,tsx}": [
      "prettier --write",
      "eslint --fix"
    ],
    "*.{html,css,less,scss,md}": [
      "prettier --write"
    ]
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog",
      "types": {
        "🚀 feat": {
          "description": "引入新功能",
          "title": "Features"
        },
        "🐛 fix": {
          "description": "修复bug",
          "title": "Bug Fixes"
        },
        "📝 docs": {
          "description": "撰写文档",
          "title": "Documentation"
        },
        "💄 style": {
          "description": "样式修改",
          "title": "Styles"
        },
        "💬 text": {
          "description": "文案修改",
          "title": "Texts"
        },
        "💩 poo": {
          "description": "重写屎一样的代码",
          "title": "Code Poop"
        },
        "⚡️ perf": {
          "description": "性能优化",
          "title": "Performance Improvements"
        },
        "✅ test": {
          "description": "增加测试",
          "title": "Tests"
        },
        "🏗 build": {
          "description": "影响构建系统或外部依赖项的更改",
          "title": "Builds"
        },
        "✂️ tool": {
          "description": "增加开发快乐值的工具",
          "title": "Tools"
        },
        "💚 ci": {
          "description": "对CI配置文件和脚本的更改(示例范围:Travis, Circle, BrowserStack, SauceLabs)",
          "title": "Continuous Integrations"
        },
        "🧹 chore": {
          "description": "日常杂事",
          "title": "Chores"
        },
        "⏪ revert": {
          "description": "回退历史版本",
          "title": "Reverts"
        },
        "👥 conflict": {
          "description": "修改冲突",
          "title": "Conflict"
        },
        "🚮 delete": {
          "description": "删除文件",
          "title": "Delete Files"
        },
        "🔖 stash": {
          "description": "暂存文件",
          "title": "Stash Files"
        }
      }
    }
  }
}
